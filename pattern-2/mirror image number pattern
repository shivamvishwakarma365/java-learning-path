import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
		
		//each line is the in the sum of spaces and numbers which is equal to N , so (N-i) spaces should be thier

		Scanner s=new Scanner(System.in);
		int n=s.nextInt();

		for(int i=1;i<=n;i++){
			for(int k=0;k<n-i;k++){
				System.out.print(" ");
			}
			for(int j=1;j<=i;j++){
				System.out.print(j);
			}
			System.out.print("\n");
		}

		
	}

}
