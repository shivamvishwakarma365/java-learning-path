//java code

import java.util.Scanner;
public class Solution {


	public static void main(String[] args) {
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();

		for(int i=1;i<=n;i++){
			for(int k=0;k<n-i;k++){
				System.out.print(" ");
			}
			for(int j=0;j<i;j++){
				System.out.print("*");
			}
			for(int p=0;p<i-1;p++){
				System.out.print("*");
			}
			System.out.print("\n");
			
		}

		
	}

}
