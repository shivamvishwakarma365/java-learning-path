import java.util.Scanner;

public class Solution {

	public static void main(String[] args) {
		Scanner s = new Scanner(System.in);
		int n = s.nextInt();
		int b;
		for (int i = 1; i <= n; i++) {
			 b=i;
			for (int k = 0; k < n - i; k++) {
				System.out.print(" ");
			}
			for (int j = 0; j < i; j++) {
				System.out.print(b++);
			}
			
			for (int p =b-2; p>=i; p--) {
				System.out.print(p);
			}
			System.out.print("\n");

		}
	}
}
